<div class="partial-container">
  <div class="form-container">
  
    {{> components/showMessage }}

    <form class="border border-light" action="/vehicle/exit" method="POST">
      <div class="form-group row row-cols-3">
        <div class="col">
          <label class="col-form-label">Plate</label>
          <input  class="form-control" name="plate" id="plate" value="{{towVehicle.plate}}" readonly>
        </div>
        <div class="col">
             <label class="col-form-label">Araç Giriş Tarihi</label>
            <input name="entranceParkingLotDate" type="text" class="form-control" value="{{towVehicle.entranceParkingLotDate}}" readonly>
        </div>
        <div class="col">
          <label class="col-form-label">Şasi No</label>
          <input name="chassisNo" type="text" class="form-control" value="{{vehicle.chassisNo}}" readonly>
        </div>
      </div>

      <div class="form-group row row-cols-3">
        <div class="col">
          <label class="col-form-label">Tip</label>
          <select class="browser-default custom-select" name="vehicleTypeId" id="vehicleTypeId" required>
            {{#each vehicleTypes}}
              <option value="{{this.id}}"
                {{#ifEquals this.id ../vehicle.vehicleTypeId}}
                selected
                {{/ifEquals}}
              >
                {{this.name}}
              </option>
            {{/each}}
          </select>
        </div>
        <div class="col">
           <label class="col-form-label">Araç Sahibi</label>
          <select class="browser-default custom-select" name="discountRoleId" id="discountRoleId" required>
            {{#each discountByRole}}
              <option value="{{this.id}}"
                {{#ifEquals this.id ../discountByRole.id}}
                selected
                {{/ifEquals}}
              >
                {{this.name}}
              </option>
            {{/each}}
          </select>
        </div>
        <div class="col">
        </div>
      </div>

      <div class="form-group row row-cols-3">
        <div class="col">
        </div>
        <div class="col">
        </div>
        <div class="col">
      </div>
      </div>
      
      <div class="form-group row row-cols-3">
        <div class="col mr-auto">

        </div>
        <div class="col-auto grid-button-group">
          <button type="button" class="btn-info"><i class="fas fa-sync-alt"></i>Sıfırla</button>
          <button type="button submit" class="btn-success"><i class="fas fa-save"></i>Çıkış</button>
        </div>
      </div>
    </form>
  </div>
</div>