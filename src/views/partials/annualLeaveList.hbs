<div class="outer-container">
  <div class="table-container">
    {{> components/showMessage }}
    <header class="form-navigation">
      <div class="d-flex align-items-center">
        <span><i class="fas fa-angle-right fa-2x"></i></span>
        <a class="form-navigation-passive" href="/annualleave/request"><i class="fas fa-plus"></i> Ekle</a>
        <a class="form-navigation-active" style="color: #17a2b8;" href="/annualleave/list">
          <i class="fas fa-list"></i> Listele
        </a>
      </div>
      <span>Yıllık İzin Bilgileri</span>
    </header>
    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Kişi Bilgisi</th>
        <th scope="col">Gün Sayısı</th>
        <th scope="col">Başlangıç Tarihi</th>
        <th scope="col">Bitiş Tarihi</th>
        <th scope="col">Durum</th>
        <th scope="col">Onayla</th>
        <th scope="col">Reddet</th>
      </tr>
      </thead>
      <tbody>
      {{#each annualLeaveList}}
        <tr>
          <td class="column1">{{incrementByOne @index}}</td>
          <td class="column2">{{this.user}}</td>
          <td class="column3">{{this.numberOfDays}}</td>
          <td class="column4">{{this.startDate}}</td>
          <td class="column5">{{this.endDate}}</td>
          <td class="column6">{{this.status}}</td>
          <td>
            <a href="/annualleave/list/approved?id={{this.id}}"><i
               class="fa fa-check btn btn-success" aria-hidden="true"></i>
            </a>
          </td>
          <td>
            <a href="/annualleave/list/declined?id={{this.id}}"><i
               class="fa fa-times btn btn-danger" aria-hidden="true"></i>
            </a>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>  