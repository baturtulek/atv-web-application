<div class="outer-container">
  <div>
    <div class="form-container">
      {{> components/showMessage }}
      <header class="form-navigation">
        <div class="d-flex align-items-center">
        </div>
        <span>Çıkan Araç(Trafik) Raporu</span>
      </header>
      <form class="border border-light" action="/reports/outgoingVehicles" method="POST">
        <div class="form-group row row-cols-2">
          <div class="col" style="margin-bottom: 24px;">
              <label class="col-form-label">Giriş Tarihi seçiniz</label>
              <div class="input-group-prepend">
                <span class="input-group-text date-icon-border"><i class="far fa-calendar-alt"></i></span>
                <input name="date" type="text" class="form-control date">
              </div>
          </div>
          <div class="col">
              <label class="col-form-label">Çıkış Tarihi seçiniz</label>
              <div class="input-group-prepend">
                <span class="input-group-text date-icon-border"><i class="far fa-calendar-alt"></i></span>
                <input name="date2" type="text" class="form-control date">
              </div>
          </div>
          <div class="col">
            <label class="col-form-label">Otopark</label>
            <select class="browser-default custom-select" name="parkingLotId" id="parkingLotId" required>
              {{#each parkingLots}}
                <option value="{{this.id}}">
                  {{this.name}}
                </option>
              {{/each}}
            </select>
          </div>
          
          <div class="col">
          </div>
          <div class="col">

          </div>
        </div>
        <div class="form-group row row-cols-2">
          <div class="col-auto grid-button-group ml-auto">
            <button type="button submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
    <div class="table-container">
    <table class="table table-striped">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Plaka</th>
        <th scope="col">Ad Soyad</th>
        {{!-- <th scope="col">Şasi No</th> --}}
        <th scope="col">Parka Giriş Tarihi</th>
        <th scope="col">Parktan Çıkış Tarihi</th>
      </tr>
      </thead>
      <tbody>
      {{#each report}}
        <tr>
          <th class="column1">{{incrementByOne @index}}</th>
          <td class="column2">{{plate}}</td>
          <td class="column2">{{receiver}}</td>
          {{!-- <td class="column3">{{lookup this 'Vehicle.chassisNo'}}</td> --}}
          <td class="column5">{{entranceParkingLotDate}}</td>
          <td class="column6">{{exitParkingLotDate}}</td>
        </tr>
      {{/each}}
      </tbody>
    </table>
</div>
</div>
<script>
  $('.date').datepicker({
    language: "tr",
    format: "yyyy-mm-dd",
    autoclose: true,
    todayHighlight: true,
    orientation: "bottom left"
  });
</script>