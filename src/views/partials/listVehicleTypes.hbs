<div class="table-container">

  {{> components/showMessage }}

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Adı</th>
        <th scope="col">Açıklaması</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each vehicleTypes}}
      <tr>
        <th class="column1">{{@index}}</th>
        <td class="column2">{{this.name}}</td>
        <td class="column3">{{this.description}}</td>
        <td class="column4" style="text-align:center; width:85px;">
          <a href="/vehicletype/update/{{this.id}}">
            <i class="fa fa-pencil-square-o fa-m btn btn-primary" aria-hidden="true" ></i>
          </a>
          <a href="/vehicletype/delete/{{this.id}}" onclick="return confirm('Silmek istediğinize emin misiniz ?');">
            <i class="fa fa-trash fa-m btn btn-danger" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>