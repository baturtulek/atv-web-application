<div class="table-responsive fixed-table-body">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Adı</th>
        <th scope="col">Açıklaması</th>
        <th scope="col">Düzenle</th>
        <th scope="col">Sil</th>
      </tr>
    </thead>
    <tbody>
      {{#each vehicleTypes}}
      <tr>
        <th scope="row">{{@index}}</th>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td><i class="fa fa-pencil-square-o btn btn-primary" aria-hidden="true" ></i></td>
        <td><a href="/vehicletype/delete/{{this.id}}" onclick="return confirm('Silmek istediğinize emin misiniz ?');">
              <i class="fa fa-trash fa-lg btn btn-danger" aria-hidden="true"></i>
            </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>