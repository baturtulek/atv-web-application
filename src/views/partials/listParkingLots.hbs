<div class="table-container">
  <table class="table table-striped">
    <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Adı</th>
      <th scope="col">Adres</th>
      <th scope="col">Açıklama</th>
      <th scope="col">Tipi</th>
      <th scope="col">Yetkili</th>
      <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    {{#each parkinglotList}}
      <tr>
        <td class="column1"> {{@index}}</td>
        <td class="column2"> {{this.name}} </td>
        <td class="column3"> {{this.address}} </td>
        <td class="column4"> {{this.description}} </td>
        <td class="column5"> {{this.[PARKING_TYPE.description]}} </td>
        <td class="column6"> {{this.[USER.name]}}  {{this.[USER.surname]}}</td>
        <td class="column7" style="text-align:center; width:85px;">
          <a href="/parkinglot/update/{{this.id}}">
            <i class="fa fa-pencil-square-o fa-m btn btn-primary" aria-hidden="true" ></i>
          </a>
          <a href="/parkinglot/delete/{{this.id}}" onclick="return confirm('Silmek istediğinize emin misiniz ?');">
            <i class="fa fa-trash fa-m btn btn-danger" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>

</div>