<div class="table-container">
  {{> components/showMessage }}
  <header class="form-navigation">
    <div class="d-flex align-items-center">
      <span><i class="fas fa-angle-right fa-2x"></i></span>
      <a class="form-navigation-passive" href="/parkinglot/add"><i class="fas fa-plus"></i> Ekle</a>
      <a class="form-navigation-active" style="color: #17a2b8;" href="/parkinglot/list"><i
              class="fas fa-list"></i> Listele</a>
    </div>
    <span>Otopark İşlemleri</span>
  </header>
  <table class="table table-striped ">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Adı</th>
        <th scope="col">Açıklama</th>
        <th scope="col">Tipi</th>
        <th scope="col">Yetkili</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each parkinglotList}}
      <tr>
        <td class="column1"> {{incrementByOne @index}}</td>
        <td class="column2"> {{this.name}} </td>
        <td class="column3"> {{this.description}} </td>
        <td class="column4"> {{this.[ParkingType.description]}} </td>
        <td class="column5"> {{this.[User.name]}} {{this.[User.surname]}}</td>
        <td class="column6" style="text-align:center; width:85px;">
          <a href="/parkinglot/update/{{this.id}}">
            <i class="far fa-edit fa-sm btn btn-success" aria-hidden="true"></i>
          </a>
          <a href="/parkinglot/delete/{{this.id}}" onclick="return confirm('Silmek istediğinize emin misiniz ?');">
            <i class="fas fa-trash fa-sm btn btn-danger" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      {{/each}} 
    </tbody>
  </table>

</div>