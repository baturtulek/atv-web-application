<div class="outer-container">
  <div class="partial-container">
    <div class="form-container">
      {{> components/showMessage }}
      <header class="form-navigation">
        <div class="d-flex align-items-center">
          <span><i class="fas fa-angle-right fa-2x"></i></span>
          <a class="form-navigation-active" style="color: #17a2b8;" href="/additionalfee/add"><i
                  class="fas fa-plus"></i> Ekle</a>
          <a class="form-navigation-passive" href="/additionalfee/list">
            <i class="fas fa-list"></i> Listele
          </a>
        </div>
        <span>Ek Ücret İşlemleri</span>
      </header>
      <form class="border border-light" id='form' action="/additionalfee/{{endPoint}}" method="POST">
        <div class="form-inside-container">
          <input type="hidden" name="id" value="{{additionalFee.id}}">

          <label class="col-form-label">Ad</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="" value="{{additionalFee.name}}"
                 required
                 oninvalid="this.setCustomValidity('Lütfen ek ücret adını girin.')"
                 oninput="setCustomValidity('')">

          <label class="col-form-label">Ücret (₺)</label>
          <input type="text" class="form-control" name="fee" id="fee" placeholder="" value="{{additionalFee.fee}}"
                 required
                 oninvalid="this.setCustomValidity('Lütfen ücreti girin.')"
                 oninput="setCustomValidity('')">
        </div>

        <div class="form-group row row-cols-3">
          <div class="col-auto grid-button-group ml-auto">
            <button type="button" class="btn btn-info btn-sm" id="resetButton"><i class="fas fa-sync-alt"></i>Sıfırla
            </button>
            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-save"></i>
              {{#ifEquals "add" endPoint}}
                Ekle
              {{else}}
                Güncelle
              {{/ifEquals}}
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  $('#resetButton').on('click', function () {
    $('#name').val('');
    $('#fee').val('');
  });
</script>