<div class="table-container">
  <div style="display: flex;flex-grow: 1;">
  <div style="flex: 1; margin: 12px 24px;">

    {{> components/showMessage }}

    <form class="border border-light" action="/vehicle/search" method="POST"> 
      <div class="form-group row row-cols-2">
        <div class="col">
          <input name="plate" type="text" class="form-control" placeholder="Araç plakasını girin">
        </div>
        <div class="col">
          <button type="button submit" class="btn btn-primary"><i class="fa fa-search"></i>
        </div>
      </div>
    </form>
  </div>
</div>

  {{#if vehicles}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Plaka</th>
        <th scope="col">Çıkış</th>
      </tr>
    </thead>
    <tbody>
      {{#each vehicles}}
      <tr>
        <th class="column1">{{@index}}</th>
        <td class="column2">{{this.plate}}</td>
        <td class="column3">
            <a href="/vehicle/exit?plate={{this.plate}}">
              <i class="fa fa-pencil-square-o fa-m btn btn-primary" aria-hidden="true" ></i>
            </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}
</div>