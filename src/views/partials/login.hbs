<div class="container d-flex">
  <div class="middle d-flex">
    <div id="login">
      <form action="/login" method="POST">
        <fieldset>
          <p>
            <span class="fas fa-user fa-sm"></span>
            <input type="text" name="username" Placeholder="Kullanıcı Adı" required pattern=".*\S+.*"
              oninvalid="this.setCustomValidity('Lütfen kullanıcı adınızı girin.')"
              oninput="setCustomValidity('')">
          </p>
          <p>
            <span class="fas fa-lock"></span>
            <input type="password" name="password" Placeholder="Şifre" required
              oninvalid="this.setCustomValidity('Lütfen şifrenizi girin.')"
              oninput="setCustomValidity('')">
          </p>

          {{> components/showMessage }}

          <div class="login-buttons-align">
              <a class="small-text" data-toggle="modal" data-target="#forgotPassword"></a>
              <input type="submit" value="Giriş Yap">
          </div>

          <div class="modal" id="forgotPassword">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">Yeni Şifre Talebi</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form method="post">
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group">
                          <span class="fas fa-envelope"></span>
                          <input name="" class="form-control input-lg" placeholder="E-mail Adresiniz">
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-light" data-dismiss="modal">İptal</button>
                  <button type="button" class="btn btn-primary">Talep Et</button>
                </div>
              </div>
            </div>
          </div>
          
        </fieldset>
      </form>

    </div> <!-- end login -->
    <div class="logo">
      <img src="/images/Windesk%20Logo_3_Çalışma%20Yüzeyi%201.svg">
    </div>
  </div>
</div>
