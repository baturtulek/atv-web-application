<div class="container d-flex">
  <div class="middle d-flex">
    <div id="login">
      <form action="/login" method="POST">
        <fieldset>
          <div class="alert alert-danger" role="alert" id="errorMessage" style="display:none;">
            Invalid credentials!
          </div>
          <p><span class="fa fa-user"></span><input type="text" name="username" Placeholder="Kullanıcı Adı" required></p>
          <p><span class="fa fa-lock"></span><input type="password" name="password" Placeholder="Şifre" required></p>

          <div>
            <span style="width:48%; text-align:left;  display: inline-block;"><a class="small-text" href="#">Şifremi Unuttum</a></span>
            <span style="width:50%; text-align:right;  display: inline-block;"><input type="submit" value="Sign In"></span>
          </div>

        </fieldset>
      </form>

    </div> <!-- end login -->
    <div class="logo">
      WINDESK
    </div>
  </div>
</div>

<script>
  window.addEventListener('load', function () {
    if (window.location.search.indexOf('error') > -1) {
      $('#errorMessage').show();
    }
  });
</script>