<div class="partial-container">
  <div class="form-container">
    <header class="form-navigation">
      <a href="/enforcementoffice/list"><i class="fa fa-list"></i> Listele</a>
      <span>İcra Kurumu İşlemleri</span>
    </header>
     {{> components/showMessage }}

    <form class="border border-light" id='form' action="/enforcementoffice/{{endPoint}}" method="POST">
      <div class="form-inside-container">
        <input type="hidden" name="id" value="{{enforcementOffice.id}}">

        <label class="col-form-label">Ad</label>
        <input type="text" class="form-control" name="name" id="name" placeholder="" value="{{enforcementOffice.name}}" required
          oninvalid="this.setCustomValidity('Lütfen icra kurumu adını girin.')"
          oninput="setCustomValidity('')">
          
          <label class="col-form-label">Açıklama</label>
          <input type="text" class="form-control" name="description" id="description" placeholder="" value="{{enforcementOffice.description}}" required
            oninvalid="this.setCustomValidity('Lütfen icra kurumu açıklamasını girin.')"
            oninput="setCustomValidity('')">
      </div>
      
      <div class="form-group row row-cols-3">
        <div class="col-auto grid-button-group ml-auto">
            <button type="button" class="btn-info" id="resetButton"><i class="fas fa-sync-alt"></i>Sıfırla</button>
            <button type="submit" class="btn-success"><i class="fas fa-save"></i>
            {{#ifEquals "add" endPoint}}
            Ekle
            {{else}}
            Güncelle
            {{/ifEquals}}
            </button>
        </div>
    </div>
    </form>
  </div>
</div>

<script>
  $('#resetButton').on('click', function () {
    $('#name').val('');
    $('#description').val('');
  });
</script>