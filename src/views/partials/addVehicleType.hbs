<div class="outer-container">
  <div class="partial-container">
    <div class="form-container">
      {{> components/showMessage }}
      <header class="form-navigation">
        <div class="d-flex align-items-center">
          <span><i class="fas fa-angle-right fa-2x"></i></span>
          <a class="form-navigation-active" style="color: #17a2b8;" href="/vehicletype/add"><i class="fas fa-plus"></i>
            Ekle</a>
          <a class="form-navigation-passive" href="/vehicletype/list">
            <i class="fas fa-list"></i> Listele
          </a>
        </div>
        <span>Araç Tipi İşlemleri</span>
      </header>
      <form class="border border-light" action="/vehicletype/{{endPoint}}/{{vehicleType.id}}" method="POST">
        <div class="form-inside-container">
          <label class="col-form-label">Adı</label>
          <input type="text" class="form-control" name="name" id="name" value={{vehicleType.name}}>

          <label class="col-form-label">Ücret (₺)</label>
          <input type="text" class="form-control" name="fee" id="fee" value="{{vehicleType.fee}}">

          <label class="col-form-label">Açıklama</label>
          <textarea class="form-control" name="description" id="description"
                    value="{{vehicleType.description}}"></textarea>
        </div>

        <div class="form-group row row-cols-3">
          <div class="col-auto grid-button-group ml-auto">
            <button type="button" class="btn btn-info btn-sm" id="resetButton"><i class="fas fa-sync-alt"></i>Sıfırla
            </button>
            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-save"></i>
              {{#ifEquals "add" endPoint}}
                Ekle
              {{else}}
                Güncelle
              {{/ifEquals}}
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script>
  $('#resetButton').on('click', function () {
    $('#name').val('');
    $('#description').val('');
    $('#fee').val('');
  });
</script>