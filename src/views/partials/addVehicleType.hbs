<div class="partial-container">
  <div class="form-container">
    <header class="form-navigation">
      <a href="/vehicletype/list"><i class="fa fa-list"></i> Listele</a>
      <span>Araç Tipi İşlemleri</span>
    </header>
    {{> components/showMessage }}

    <form class="border border-light" action="/vehicletype/{{endPoint}}/{{vehicleType.id}}" method="POST">
      
      <div class="form-group row row-cols-2">
        <div class="col">
          <label class="col-sm-2 col-form-label">Adı</label>
          <input name="name" type="text" class="form-control" placeholder="Araç Tipi" value={{vehicleType.name}}>
        </div>
        <div class="col">
          <label class="col-sm-2 col-form-label">Açıklama</label>
          <input name="description" type="text" class="form-control" placeholder="Açıklama" value="{{vehicleType.description}}">
        </div>
      </div>
      
      <div class="form-group row row-cols-2">
        <div class="col mr-auto">

        </div>
        <div class="col-auto grid-button-group">
          <button type="button" class="btn-info"><i class="fas fa-sync-alt"></i>Sıfırla</button>
          <button type="button submit" class="btn-success"><i class="fas fa-save"></i>
          {{#ifEquals "add" endPoint}}
            Ekle
          {{else}}
            Güncelle
          {{/ifEquals}}</button>
        </div>
      </div>
    </form>
  </div>
</div>