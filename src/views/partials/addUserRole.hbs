<div class="partial-container">
  <div class="form-container">
    <header class="form-navigation">
      <a href="/role/list"><i class="fa fa-list"></i> Listele</a>
      <span>Profil İşlemleri</span>
    </header>
    {{> components/showMessage }}
    <form class="border border-light" action="/role/{{endPoint}}" method="POST">
      <div class="form-inside-container mb-2 ml-3">
        <input type="hidden" name="id" value="{{role.id}}">
        <label class="col-form-label">Profil Adı</label>
        <input type="text" class="form-control" name="role" id="role" required pattern=".*\S+.*" value="{{role.role}}">
      </div>
      <hr />
      <div class="form-inside-container ml-3">
        {{#each competencies}}
          <label class="col-form-label">{{this.description}}</label>
        <div class="pl-5 pt-2">
          <label class="switch">
            <input type="checkbox" id="switch{{this.id}}" name="{{this.id}}"
              {{#ifIdInArr this.id ../userRoleCompetencies}} checked {{/ifIdInArr}}>
            <div class="slider round"></div>
          </label>
        </div>
        {{/each}}
      </div>
      <div class="form-group row row-cols-3">
        <div class="col-auto grid-button-group ml-auto">
          <button type="button" class="btn-info" id="resetButton"><i class="fas fa-sync-alt"></i>Sıfırla</button>
          <button type="submit" class="btn-success"><i class="fas fa-save"></i>
            {{#ifEquals "add" endPoint}}
            Ekle
            {{else}}
            Güncelle
            {{/ifEquals}}
          </button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  $('#resetButton').on('click', () => {
    $('#role').val('');
    $("[type='checkbox']").prop('checked',false);
  });
</script>