
<div class="container mt-3">
        <h2>Araç Giriş İşlemleri</h2>
        <br>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link" href="#menu1">Listele</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#menu2">Ekle</a>
          </li>
        </ul>
      
        <!-- Tab panes -->
        <div class="tab-content">
          <div id="menu1" class="container tab-pane active"><br>
                <form method="POST" action="/vehicle/search">
                <div class="col-lg-12">
                        <div class="row">
                                <div class="col-sm-4">
                                        <div class="form-group">
                                                <label class="col-sm-2 control-label">Plaka</label>
                                                <div class="col-sm-4">
                                                        <input type="text" name="licensePlate" id="licensePlate" value=""
                                                                class="form-control"
                                                                data-inputmask-regex="^[A-Za-z0-9']+([A-Za-z0-9']+)*$"
                                                                style="text-transform: uppercase;">
                                                </div>
                                        </div>
                                </div>
                                
                        </div>
                        <div class="row">
                                <div class="col-sm-2">
                                        <div class="form-group">
                                                <input type="submit" class="btn btn-primary btn-block btn-sm" id="searchOne" value="Ara">
                                        </div>
                                </div>
                        </div>
                </div>
                
                </form>
          </div>
          <div id="menu2" class="container tab-pane fade"><br>
                <form method="POST" action="/vehicle/add">
                        <div class="col-lg-12">
                                <div class="row">
                                        <div class="col-sm-4">
                                                <div class="form-group">
                                                        <label class="col-sm-4 control-label">Plaka</label>
                                                        <div class="col-sm-8">
                                                                <input type="text" name="licensePlate" id="licensePlate" value=""
                                                                        class="form-control"
                                                                        data-inputmask-regex="^[A-Za-z0-9']+([A-Za-z0-9']+)*$"
                                                                        style="text-transform: uppercase;">
                                                                        
                                                        </div>
                                                </div>
                                                <div class="form-group"><label class="col-sm-4 control-label">Yed'i
                                                                Emin No</label>
                                                        <div class="col-sm-8">
                                                                <input type="text" name="trusteeNo" id="trusteeNo" value=""
                                                                        class="form-control">
                                                        </div>
                                                </div>
                                                <div class='col-sm-4'>
                                                        <div class="form-group">
                                                                <div class='input-group date' id='datetimepicker1'>
                                                                        <input type="date" id="start" name="entranceDate" value="2019-12-25" min="2019-12-25"
                                                                                max="2022-12-25">
                                                
                                                                </div>
                                                        </div>
                                                
                                                </div>
                                                <div class="form-group"><label class="col-sm-4 control-label">Motor No</label>
                                                <div class="col-sm-8">
                                                        <input type="text" name="engineNo" id="engineNo" value=""
                                                                class="form-control">
                                                </div>
                                        </div>
                                        </div>
                                        <div class="col-sm-4">
                                                <div class="form-group"><label class="col-sm-4 control-label">Şasi No</label>
                                                        <div class="col-sm-8">
                                                                <input type="text" name="chassisNo" id="chassisNo" value="" class="form-control"
                                                                        data-inputmask-regex="^[A-Za-z0-9']+([A-Za-z0-9']+)*$">
                                                        </div>
                                                </div>
                                        </div>
                                        <div class="col-sm-4">
                                                <div class="form-group"><label class="col-sm-4 control-label">Durum</label>
                                                        <div class="col-sm-8">
                                                                <select name="status" id="status" class="form-control">
                                                                        <option value="" selected="selected">
                                                                        </option>
                                                                        <option value="1">
                                                                                Otoparkta</option>
                                                                        <option value="2">
                                                                                Transfer Halinde
                                                                        </option>
                                                                        <option value="3">
                                                                                Çıkış Onayı Bekliyor
                                                                        </option>
                                                                        <option value="4">Çıkış
                                                                                Yaptı</option>
                                                                        <option value="5">
                                                                                İndirim Onayına
                                                                                Gönderildi</option>
                                                                        <option value="6">
                                                                                İndirim Onaylandı
                                                                        </option>
                                                                        <option value="7">
                                                                                Satıştan Çıkış</option>
                                                                </select>
                                                        </div>
                                                </div>
                                        </div>
                                        <div class="row">
                                                <div class="col-sm-12">
                                                        <div class="form-group">
                                                                <input type="submit" class="btn btn-primary btn-block btn-sm" value="Ekle">
                                                        </div>
                                                </div>
                                        </div>
                                </div>
                </form>
          </div>
        </div>
      </div>
